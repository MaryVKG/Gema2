<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetailerStartUpScreen"
    android:background="@color/purple_700"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/welcome"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bowlby_one_sc"
            android:text="@string/retailer_heading"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/arbutus_slab"
            android:text="@string/retailer_tag_line"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/iniciarSesionBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:layout_weight="1"
                tools:ignore="ButtonStyle"
                android:transitionName="transitionLogin"
                android:onClick="callLoginScreen"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/registroBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:layout_weight="1"
                tools:ignore="ButtonStyle"
                android:transitionName="transitionSignUp"
                android:onClick="callSignUpScreen"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cómo trabajamos?"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>
</ScrollView>