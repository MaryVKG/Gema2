<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendNewPassword"
    android:background="@color/purple_700"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/general_back_icon"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/procesamientodedatos"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar contrase単a"
            android:textColor="@color/black"
            android:fontFamily="@font/bevan"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textAlignment="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_marginTop="40dp"
            android:hint="Nueva contrase単a"
            android:textColorHint="@color/purple_700"
            app:startIconDrawable="@drawable/changepassword"
            app:startIconTint="@color/purple_700"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/purple_700"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@color/purple_700">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_marginTop="10dp"
            android:hint="Confirma tu contrase単a"
            android:textColorHint="@color/purple_700"
            app:startIconDrawable="@drawable/changepassword"
            app:startIconTint="@color/purple_700"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/purple_700"
            app:boxStrokeWidthFocused="2dp"
            app:boxStrokeColor="@color/purple_700">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/changePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cambiar contrase単a"
            android:textColor="@color/black"
            android:onClick="changePassword"
            android:transitionName="transitionChangePassword"
            />

    </LinearLayout>

</ScrollView>